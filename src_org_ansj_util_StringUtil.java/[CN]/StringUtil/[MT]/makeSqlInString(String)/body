{
  String[] strs=str.split(",");
  StringBuilder sb=new StringBuilder();
  String field=null;
  for (int i=0; i < strs.length; i++) {
    field=strs[i].trim();
    if (isNotBlank(field)) {
      sb.append(DY);
      sb.append(field);
      sb.append(DY);
      if (i < strs.length - 1) {
        sb.append(DH);
      }
    }
  }
  return sb.toString();
}
